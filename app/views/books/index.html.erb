  <% @book.errors.full_messages.each do |messsge| %>
   <li><%= message %></li>
<% end %>
 </ul>
<%= form_with model:@book, local:true do |f| %>

<ravel for="title">Title</ravel>
<div class="form">
 <%= f.text_field:title %>
</div>
<label for="body">Body</label>
